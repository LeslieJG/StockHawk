<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.sam_chordas.android.stockhawk.ui.DetailFragment">



    <TextView
        android:id="@+id/line_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Chart Title"
        app:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/line_chart_y_axis_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:rotation="-90"
            android:text="Stock Price"
            android:layout_weight="1"
            app:layout_gravity="center_vertical" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/stock_history_line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:contentDescription="@string/stock_history_line_chart_content_description"></com.github.mikephil.charting.charts.LineChart>
        </FrameLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/line_chart_x_axis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-Axis"
        />

</LinearLayout>
