<?xml version="1.0" encoding="utf-8"?>

<!-- The layout for the Stock Quotes Widget
 This is included in xml/widget_info_stock_quptes
 -->



<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:layout_width="180dp"
    tools:layout_height="40dp"
    android:id="@+id/widget"
    android:background="@drawable/rounded_corner_square_background">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/widget_stock_symbol"
        android:textAllCaps="true"
        android:textSize="30sp"
        android:textScaleX="0.75"
        android:layout_gravity="center"
        tools:text="test"

        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/widget_stock_price"
            android:layout_gravity="center_horizontal"
            tools:text="$44.13"
            style="@style/WidgetDefaultSizeTextStyle"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="@drawable/percent_change_pill"
            android:textStyle="bold"
            android:paddingLeft="3dp"
            android:paddingStart="3dp"
            android:paddingRight="3dp"
            android:paddingEnd="3dp"
            android:id="@+id/widget_stock_price_change"
            android:layout_gravity="center_horizontal"
            tools:text="+0.23"
            style="@style/WidgetDefaultSizeTextStyle"
            />

    </LinearLayout>
</LinearLayout>


