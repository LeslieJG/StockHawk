<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:columnCount="3"
    tools:context="com.sam_chordas.android.stockhawk.ui.DetailFragment">


    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/line_chart_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Chart Title"
        app:layout_columnSpan="3"
        app:layout_columnWeight="1"
        app:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/line_chart_y_axis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rotation="-90"
        android:text="Y-Axis"
        app:layout_column="1"
        app:layout_columnWeight="1"
        app:layout_gravity="center"


        />

    <FrameLayout
        app:layout_columnSpan="1"
        app:layout_columnWeight="12"
        app:layout_rowWeight="1">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/stock_history_line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/stock_history_line_chart_content_description"></com.github.mikephil.charting.charts.LineChart>

    </FrameLayout>


    <TextView
        android:id="@+id/line_chart_x_axis_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="X-Axis"
        app:layout_column="2"
        app:layout_columnWeight="1" />

</android.support.v7.widget.GridLayout>
